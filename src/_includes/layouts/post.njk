---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper post">
  <div>
    {%- set eleventyNavigation = { parent: "Notes" } -%}
    {% include 'layouts/blocks/breadcrumbs.njk' %}
    <section id="hero">
    <h1 class='postTitle'>{{title}}</h1>
      <p>
        {{description}}
      </p>
    </section>
    {{ content | safe }}
    <p>
      Thanks for reading, <a href="https://www.twitter.com/marcsoriginal">say hi</a>
    </p>
    <div class="controls">
    {% if prevPost.url %}
      <p>
        <strong>Previous post</strong>: 
        <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
      </p>
    {% endif %}
    {% if nextPost.url %}
      <p>
        <strong>Next post</strong>: 
        <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </p>
    </div>
    {% endif %}
  </div>
</div>