---
layout: layouts/base.njk
templateClass: tmpl-home
---

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    <section id="things">
      <h3><b>Things</b></h3>
      
      <ul class="no-bullet">
        {%- for post in collections.things -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %}>
        <div class="thing no-image">
         <div class="text">
           <h2>{{ post.data.title }}<p class="chip {{post.data.chiptype}}">{{post.data.status}}</p></h2>
           <p class="subtle"> {{ post.data.description }}</p>
          <a href="{{ post.data.link }}"></a>
        </div>
      </div>
      </li> 
      {%- endfor -%}
      <li><a href="/things">More things</a></li>
    </ul>
    </section>
    
    <section id="notes">
      <h3><b>Notes</b></h3>
      <ul class="no-bullet">
        {%- for post in collections.posts -%}
          <li{% if page.url == post.url %} aria-current="page"{% endif %}>{{ post.data.page.date | htmlDateString }} â€” <a href='{{ post.url }}'>{{ post.data.title }}</a></li>
        {%- endfor -%}
        <li><a href="/posts">View all posts</a></li>
      </ul>
    </section>

  </div>
</div>
